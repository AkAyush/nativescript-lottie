<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:Lottie="./temp" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Airbnb Lottie" icon="" class="action-bar"></ActionBar>
    </Page.actionBar>
    <StackLayout class="p-10">
        <StackLayout orientation="vertical">
            <Lottie:LottieView src="{{ src }} " height="150" loop="{{ loop }}" autoPlay="{{ autoPlay }}" loaded="{{ lottieLoaded }}" />
        </StackLayout>
        <GridLayout class="p-t-10" rows="auto" columns="*, *">
            <Button class="btn btn-primary p-t-10" col="0" text="Next" tap="{{ next }}" />
            <Button class="btn btn-primary p-t-10" col="1" text="Start/Stop" tap="{{ startOrStopAnimation }}" />
        </GridLayout>
    </StackLayout>
</Page>
